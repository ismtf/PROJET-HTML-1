// ----------------------
// Fonctions sur les tableaux
// ----------------------

// 1. Trouver le maximum
function trouverMaximum(tableau) {
    return Math.max(...tableau);
}

// 2. Trouver le minimum
function trouverMinimum(tableau) {
    return Math.min(...tableau);
}

// 3. Somme du tableau
function sommeTableau(tableau) {
    return tableau.reduce((acc, val) => acc + val, 0);
}

// 4. Filter Array (filtrer les éléments > 5 par exemple)
function filtrerTableau(tableau, condition) {
    return tableau.filter(condition);
}

// ----------------------
// Fonctions mathématiques
// ----------------------

// 1. Factorielle
function factorielle(n) {
    if (n < 0) return "Non défini";
    if (n === 0) return 1;
    return n * factorielle(n - 1);
}

// 2. Vérification des nombres premiers
function estPremier(n) {
    if (n <= 1) return false;
    for (let i = 2; i <= Math.sqrt(n); i++) {
        if (n % i === 0) return false;
    }
    return true;
}

// 3. Séquence de Fibonacci
function fibonacci(n) {
    const sequence = [0, 1];
    for (let i = 2; i < n; i++) {
        sequence.push(sequence[i - 1] + sequence[i - 2]);
    }
    return sequence.slice(0, n);
}
